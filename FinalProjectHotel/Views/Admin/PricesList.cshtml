
@model IEnumerable<FinalProjectHotel.Models.Admin.PriceModel>

@{
    ViewBag.Title = "PricesList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(Model, rowsPerPage: 10);
}


<!-- ============================================================== -->
<!-- Form Lista de Precios -->
<!-- ============================================================== -->

<h2>PriceList</h2>

@grid.GetHtml(
    tableStyle: "table",
    mode: WebGridPagerModes.All,
    fillEmptyRows: true,
    firstText: "<< First",
    previousText: "< Previous",
    nextText: "Next >",
    lastText: "Last >>",
    columns: new[]
    {
        grid.Column("ID_Consecutivo" ),
        grid.Column("Tipo"),
        grid.Column("Precio"),
        grid.Column("Update", format: @<text> @item.GetSelectLink("Update")
        </text>,  style: "col1Width" , canSort: false)

                    })

<input class="btn btn-primary form-control" type="button" onclick="location.href='/Admin/InsertPricesForm';" value="Add Price" />

@if (grid.HasSelection)

{
    @RenderPage("~/Views/Admin/UpdatePricesForm.cshtml", new { PriceModel = grid.SelectedRow })
}


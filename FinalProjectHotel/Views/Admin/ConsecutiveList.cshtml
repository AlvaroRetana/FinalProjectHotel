
@model IEnumerable<FinalProjectHotel.Models.Admin.ConsecutiveModel>
@{
    ViewBag.Title = "ConsecutiveList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(Model, rowsPerPage: 10, selectionFieldName: "SelectedRow");
}


<!-- ============================================================== -->
<!-- Form Lista Consecutivo -->
<!-- ============================================================== -->



@grid.GetHtml(
    tableStyle: "table",
    mode: WebGridPagerModes.All,
    fillEmptyRows: true,
    firstText: "<< First",
    previousText: "< Previous",
    nextText: "Next >",
    lastText: "Last >>",
    alternatingRowStyle: "webgrid-alternating-row",
    selectedRowStyle: "webgrid-selected-row",
    columns: new[]
    {
        grid.Column("Codigo", "Código"),
        grid.Column("ID_Consecutivo" ),
        grid.Column("Descripcion"  ),
        grid.Column("Prefijo"),
        grid.Column("Rango_Inicial") ,
        grid.Column("Rango_Final"),
        grid.Column("Update", format: @<text> @item.GetSelectLink("Update")
        </text>,  style: "col1Width" , canSort: false)
                                                                                        }
                                                                                      )

<input class="btn btn-primary form-control" type="button" onclick="location.href='/Admin/InsertConsecutiveForm';" value="Add Consecutive" />

@if (grid.HasSelection)

{
    @RenderPage("~/Views/Admin/UpdateConsecutiveForm.cshtml", new { ConsecutiveModel = grid.SelectedRow })
}




@{
    ViewBag.Title = "InsertPricesForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================================================== -->
<!-- Form Precios -->
<!-- ============================================================== -->
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="SectionPrices">
            <h3 class="section-title">Prices</h3>

        </div>
        <div class="card">
            <h5 class="card-header">New Price</h5>
            <div class="card-body">

                <!-- Tipo:  -->
                <div class="form-group" id="SectionType">
                    <label for="ComboBoxTipo">Tipo:</label>
                    <select class="form-control" id="ComboBoxTipo">
                        <option>Normal</option>
                        <option>Deluxe</option>
                        <option>Condominio</option>
                        <option>Licor</option>
                        <option>Bebidas Gaseosas</option>
                        <option>Bebidas Naturales</option>
                        <option>Dulces</option>
                        <option>Helados</option>
                        <option>Flores</option>
                        <option>Tartas</option>
                    </select>
                </div>
                <!-- Precio:  -->
                <div class="form-group" id="SectionPrice">
                    <label for="InputPrecio" class="col-form-label">Price:</label>
                    <input id="InputPrecio" type="number" class="form-control" placeholder="0">

                </div>
                <!-- Insertar Precios:  -->
                <div class="form-group">
                    <button class="btn btn-primary form-control" type="submit" onclick="Save()">
                        <i class="glyphicon glyphicon-log-in"></i>
                        Save
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>

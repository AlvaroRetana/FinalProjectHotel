
@{
    ViewBag.Title = "UpdateActivity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================================================== -->
<!-- Form Actualizar Actividad -->
<!-- ============================================================== -->

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="SectionConsecutives">
            <h3 class="section-title">Activities</h3>

        </div>
        <div class="card">
            <h5 class="card-header">Update Activity</h5>
            <div class="card-body">

                <!-- ID_Consecutivo:  -->
                <div class="form-group" id="SectionConsecutive">
                    <label for="ComboBoxDescripcion">ID_Consecutive</label>
                    <select class="form-control" id="ComboBoxConsecutive"></select>
                </div>
                <!-- Nombre:  -->
                <div class="form-group" id="SectionName">
                    <label for="InputName" class="col-form-label">Name: </label>
                    <input id="InputName" type="text" required="" class="form-control">
                </div>
                <!-- Descripcion:  -->
                <div class="form-group">
                    <label for="InputDescription">Description:</label>
                    <input id="InputDescription" type="text" class="form-control">
                </div>
                <!-- Imagen:  -->
                <div class="form-group">
                    <input type="file" name="file" id="file" /><br>
                </div>
                <!-- Insertar Actividad:  -->
                <div class="form-group">
                    <button class="btn btn-primary form-control" type="submit" onclick="Save()">
                        <i class="glyphicon glyphicon-log-in"></i>
                        Save
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>


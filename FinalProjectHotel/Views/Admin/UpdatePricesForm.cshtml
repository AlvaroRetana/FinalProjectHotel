
@{
    ViewBag.Title = "UpdatePricesForm";
}

<!-- ============================================================== -->
<!-- Form Actualizar Precios -->
<!-- ============================================================== -->

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="SectionPrices">
            <h3 class="section-title">Prices</h3>

        </div>
        <div class="card">
            <h5 class="card-header">Update Price</h5>
            <div class="card-body">

                <!-- Consecutivo:  -->
                <div class="form-group" id="SectionConsecutive">
                    <label for="InputConsecutive" class="col-form-label">ID_Consecutive:</label>
                    <input id="InputConsecutive" type="text" class="form-control" placeholder="0" value="@Page.PriceModel.ID_Consecutivo">

                </div>

                <!-- Tipo:  -->
                <div class="form-group" id="SectionType">
                    <label for="ComboBoxTipo">Type:</label>
                    <select class="form-control" id="ComboBoxType">
                        <option>Normal</option>
                        <option>Deluxe</option>
                        <option>Condominium</option>
                        <option>Liquor</option>
                        <option>Soda Drink</option>
                        <option>Natural Drink</option>
                        <option>Sweets</option>
                        <option>Ice-Creams</option>
                        <option>Flower</option>
                        <option>Cakes</option>
                    </select>
                </div>
                <!-- Precio:  -->
                <div class="form-group" id="SectionPrice">
                    <label for="InputPrice" class="col-form-label">Price:</label>
                    <input id="InputPrice" type="text" class="form-control" placeholder="0" value="@Page.PriceModel.Precio">

                </div>
                <!-- Actualizar Precio:  -->
                <div class="form-group">
                    <button class="btn btn-primary form-control" type="submit" onclick="Update()">
                        <i class="glyphicon glyphicon-log-in"></i>
                        Update
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- Form Actualizar Precios  -->
<!-- ============================================================== -->


